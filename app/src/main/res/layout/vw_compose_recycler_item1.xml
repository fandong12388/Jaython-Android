<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="186dp">

    <ImageView
        android:id="@+id/compose_bg_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/compose_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:maxLines="1"
            android:textColor="@color/black_78"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:maxLines="1"
            android:text="每周练习3~4次"
            android:textColor="@color/black_78"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/compose_item_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="共18组"
            android:textColor="@color/black_78"

            android:textSize="14sp" />

        <TextView
            android:id="@+id/compose_item_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:text="组间休息5s"
            android:textColor="@color/black_78"

            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/compose_list_item_like"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/like_press" />

            <TextView

                android:id="@+id/compose_list_item_num"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/compose_list_item_like"
                android:gravity="left|center_vertical"
                android:text="1254"
                android:textColor="@color/black_78"

                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
